[Unit]
Description=FastAPI Clothing Store App
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/clothing-store/website
Environment="PATH=/home/ubuntu/clothing-store/website/venv/bin"
ExecStart=/home/ubuntu/clothing-store/website/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8001

[Install]
WantedBy=multi-user.target
